<!-- Template for displaying error when needed -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 11">
    <div id="errorNotification" class="toast hide" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="toast-header">
        <img src="..." class="rounded me-2" alt="...">
        <strong class="me-auto">Centre Tremplin - Erreur</strong>
        <small>Il y a x minutes...</small>
        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
      <div class="toast-body">
        Oups ! Une erreur est survenue:
        <p id="showingError">#Erreur#</p>
      </div>
    </div>
</div>