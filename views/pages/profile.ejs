<div class="container profile_page">
    <div class="login_register_view">
        <h1>Login</h1>
        <div class="login card mb-3">
            <form class="card-body" onsubmit="return false;">
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Pseudo/Email</h6>
                    </div>
                    <input value="" class="col-sm-8 text-secondary login" type="text" placeholder=" ">
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Mot de passe</h6>
                    </div>
                    <input value="" class="col-sm-8 text-secondary password" type="password" placeholder=" ">
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-12 text-right">
                        <button class="btn btn-info login_btn">Se connecter</button>
                    </div>
                </div>
            </form>
        </div>
        <h1>Register</h1>
        <div class="register card mb-3">
            <form class="card-body" onsubmit="return false;">
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Pseudo</h6>
                    </div>
                    <input class="col-sm-8 text-secondary username" type="text" id="reg-username" placeholder=" " />
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Prénom</h6>
                    </div>
                    <input class="col-sm-8 text-secondary firstname" type="text" id="reg-firstname" placeholder=" " />
                </div>
                <div class="row mt-2">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Nom</h6>
                    </div>
                    <input class="col-sm-8 text-secondary lastname" type="text" id="reg-lastname" placeholder=" " />
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Email</h6>
                    </div>
                    <input class="col-sm-8 text-secondary email" type="email" id="reg-email" placeholder=" ">
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Mot de passe</h6>
                    </div>
                    <input class="col-sm-8 text-secondary password" type="password" id="reg-password" placeholder=" ">
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">GSM</h6>
                    </div>
                    <input class="col-sm-8 text-secondary mobile" type="tel" id="reg-mobile" placeholder=" ">
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Adresse</h6>
                    </div>
                    <input class="col-sm-8 text-secondary address" type="text" id="reg-address" placeholder=" ">
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-12 text-right">
                        <button class="btn btn-info register_btn" id="reg-submit">S'enregistrer</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="logged_view">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <input type="file" accept="image/png, image/jpeg, image/jpg" id="profile_pic_input"
                                style="display:none" />
                            <div class="profile_picture_container">
                                <img alt="Profil Picture" class="rounded-circle profile_picture" width="150"
                                    id="profile_picture" loading="lazy">
                                <div class="lds-dual-ring"></div>

                            </div>
                            <div class="mt-3">
                                <h4><span class="firstname"></span> <span class="lastname"></span></h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
                    <div class="row d-flex">
                        <a class="btn btn-outline-primary" href="/booking">Salles</a> <!-- therapist user only -->
                    </div>
                    <div class="row d-flex my-3">
                        <a class="btn btn-outline-success" href="/therapist">Mon espace</a> <!-- therapist user only -->
                    </div>
                    <div class="row d-flex">
                        <a class="btn btn-outline-danger" href="/admin/panel">Admin</a> <!-- admin user only -->
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Pseudo</h6>
                            </div>
                            <input class="col-sm-8 text-secondary username" type="text" />
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Prénom</h6>
                            </div>
                            <input class="col-sm-8 text-secondary firstname" type="text" />
                        </div>
                        <div class="row mt-2">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Nom</h6>
                            </div>
                            <input class="col-sm-8 text-secondary lastname" type="text" />
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <input class="col-sm-8 text-secondary email" type="email">
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">GSM</h6>
                            </div>
                            <input class="col-sm-8 text-secondary mobilephone" type="tel">
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Adresse</h6>
                            </div>
                            <input class="col-sm-8 text-secondary address" type="text">
                        </div>
                        <hr>
                        <div class="row" hidden>
                            <p id="edit-error">Error msg</p>
                        </div>
                        <div class="row">
                            <div class="col d-flex gap-3 flex-wrap">
                                <div>
                                    <button class="btn btn-danger my-1" id="profil_disconnect">Se déconnecter</button>
                                </div>
                                <div>
                                    <button class="btn btn-success my-1" id="profil_ask_therapist">Devenir
                                        thérapeute</button>
                                </div>
                                <div class="text-right flex-grow-1">
                                    <button class="btn btn-info  my-1" id="profil_edit" disabled>Enregistrer</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<script type="module" id="re_script">
    import { main } from "/js/profile.js";
    main();
</script>